<div class="memo-body">
  <%= render partial: "memos/side", locals: { side_memos: @side_memos, tags: @tags } %>
  <div class="memo">
    <div class="form-head">
      <%= "#{@date}のゼロ秒メモ" %>
    </div>
    <div class="form">
      <%= form_with model: @new_memo, url: memos_path, locals: true do |f| %>
        <div>
          <%= f.label :theme, "メモのテーマ（２０文字以内）", class: "theme" %>
        </div>
        <div>
          <%= f.text_field :theme, placeholder:"テーマを入力", class: "memo-theme", id: "memo-theme" %>
        </div>
        <div id="timer">
          <div id="meter"></div>
          <div id="time">1分メモスタート</div>
        </div>
        <div>
          <%= f.label :theme, "メモ"%>
        </div>
        <div>
          <%= f.text_area :text, placeholder:"思いつくままに入力", class: "memo-text", id: "memo-text" %>
        </div>
        <div class="tag-add">
          <label for="tag-add">タグの追加（1０文字以内）</label>
          <input type="text" placeholder="タグの追加" id="tag-add">
        </div>
        <div id="tag-area">
          <div class="tag-caution">
            タグは５個まで登録できます
          </div>
        </div>
        <%= f.submit "保存", class: "btn", id: "submit" %>
      <% end %>
    </div>
  </div>
  <%= render partial: "memos/list", locals: { list_memos: @list_memos, date: Date.today.to_date } %>
</div>